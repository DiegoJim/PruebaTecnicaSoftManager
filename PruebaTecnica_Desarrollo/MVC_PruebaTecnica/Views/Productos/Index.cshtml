@model List<MVC_PruebaTecnica.Models.Producto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>


    <h2>Listado de Productos</h2>

    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Cantidad Actual</th>

                <th>Cantidad Vendida</th>
                <th>Precio Venta</th>
                <th>Vender</th> <!-- Columna adicional para los botones -->
                <th>Hacer Pedido</th> <!-- Columna adicional para los botones -->
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Tipo</td>
                    <td>@producto.CantidadActual</td>

                    <td>@producto.CantidadVendida</td>
                    <td>@producto.PrecioVenta</td>
                    <td>
                        @using (Html.BeginForm("Vender", "Productos", FormMethod.Post))
                        {
                            @Html.Hidden("id", producto.Id)
                            @Html.TextBox("cantidad")
                            <input type="submit" value="Vender" class="btn btn-primary" />
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("HacerPedido", "Productos", FormMethod.Post))
                        {
                            @Html.Hidden("id", producto.Id)
                            @Html.TextBox("cantidad")
                            <input type="submit" value="Hacer Pedido" class="btn btn-success" />
                        }
                    </td>
                </tr>
            }
        </tbody>


    </table>


</body>
</html>
